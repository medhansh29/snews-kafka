# SNEWS Kafka Configuration
# Copy this file to .env and modify as needed

# Kafka Connection
# Local development (Docker)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Production (NASA GCN) - uncomment when you have credentials
# KAFKA_BOOTSTRAP_SERVERS=kafka.gcn.nasa.gov:9092
# GCN_CLIENT_ID=your-client-id
# GCN_CLIENT_SECRET=your-client-secret

# Kafka Topics
SNEWS_TOPIC=snews-alerts

# Producer Settings
KAFKA_ACKS=all
KAFKA_RETRIES=3

# Consumer Settings
KAFKA_CONSUMER_GROUP=snews-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest
